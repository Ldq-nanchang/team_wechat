/* pages/activity_info/activity_i.wxss */

.banner {
  width: 100%;
  height: 500rpx;
}
.activity-head-wrapper {
  position: relative;
  padding: 0 30rpx;
  background: #fff;
}
.activity-head {
  position: absolute;
  top: -30rpx;
  left: 30rpx;
  width: calc(100% - 120rpx);
  z-index: 1000;
  padding: 30rpx;
  box-shadow:0px 0px 20px 0px rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  background: #fff;
}
.activity-name {
  height: 75rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
  font-size: 30rpx;
}