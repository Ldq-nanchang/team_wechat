/* pages/activity_info/activity_i.wxss */

.banner {
  width: 100%;
  height: 500rpx;
}
.activity-head-wrapper {
  position: relative;
  padding: 0 30rpx;
  background: #fff;
  min-height: 200rpx;
}
.activity-head {
  position: absolute;
  top: -30rpx;
  left: 30rpx;
  width: calc(100% - 120rpx);
  z-index: 1000;
  padding: 30rpx;
  box-shadow:0px 0px 20px 0px rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  background: #fff;
}
.activity-name {
  /* height: 75rpx; */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
  font-size: 30rpx;
}
.activity-hot {
  align-items: center;
  margin-top: 30rpx;
  color: #9DABB2;
}
.activity-head-btn {
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;

  padding: 0 30rpx;
  height: 60rpx;
  border-radius: 6rpx; 
  line-height: 60rpx;
  text-align: center;
  background:#ff9d20;
  color: #fff;

}
.disable {
  background: #BFBFBF;
  color: #fff;
}

.activity-action {
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: #fff;
}
.activity-action-item {
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.activity-action-item- {
  align-items: center;
}

/* 社团介绍 */
.association {
  padding: 30rpx;
  background: #fff;
  margin-bottom: 30rpx;
}
.association-icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 150rpx;
  margin-right: 30px;
}

.association-name {
  margin: 15rpx 0 20rpx 0;
  font-size: 30rpx;
}
.association-hot {
  align-items: center;
}
.association-hot-line {
  border-right: 1px solid #9DABB2;
  height: 20rpx;
  margin: 0 20rpx;
}
.assocation-des {
  margin: 30rpx 0 20rpx 0;
  color: #9DABB2
}
.assocation-btn {
  border-radius: 6rpx;
  width: calc(100% - 30rpx);
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
}

.condition {
  position: fixed;
  bottom: 0;
  z-index: 2000;
  width: 100%;
  height: 100rpx;
  background: #fff;
  box-shadow:0px 2px 8px 0px rgba(52,195,203,0.3);
}
.condition-item {
  width: 50%;
  text-align: center;
  
  color: #fff;
}

.condition-btn {
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  width: 50%;
  color: #1a1a1a;
}

.wx-html {
  padding: 30rpx;
  background: #fff;
}

.submit {
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
}
.share-warpper {
  position: fixed;
  left: 0;
  top: 0;
  overflow: hidden;
  width: 100vh;
  height: 100vh;
  z-index: 3000;
}

/* 选择分享方式弹窗 */
.select-share-wrapper {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.7);
  z-index: 3000;
}
.select-share {
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  padding: 30rpx;
  width: calc(100% - 120rpx);
  background: #fff;
  border-radius: 8rpx;
  text-align: center;
}
.select-share-title {
  font-size: 30rpx; 
  color: #1a1a1a;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #eee;
}
.select-share-btns {
  padding-top: 30rpx;
}
.select-share-btn {
  align-items: center;
  width: 50%;
  font-size: 26rpx;
}
.share-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 20rpx;
}
.select-share-close {
  margin-top: 30rpx;
  width: 100%;
  height: 80rpx;
  background: #EBF0F2;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
}
/* canvas绘图 */
.card {
  position: fixed;
  top: 120rpx;
  left: 60rpx;
  /* padding: 20rpx; */
  width: calc(100% - 160rpx);
  height: calc(100vh - 300rpx);
  background: #fff;
  border-radius: 8rpx;
}
.canvas-wrapper {
  position: relative;
  width: 100%;
  height: calc(100% - 120rpx);

}
.card-btn {
  margin-top: 20rpx;
  height: 80rpx;
  background: #ff9d20;
  border-radius: 8rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}
.close-card {
  display: flex;
  justify-content: center;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 80rpx;
  width: 100%;
}
.close-card-icon {
  width: 40rpx;
  height: 40rpx;
}

