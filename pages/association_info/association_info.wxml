                <view class="activity-item flex-row"
                wx:for="{{news}}" wx:key="{{index}}">
                  <view class="activity-item-headpic" bindtap="perview" data-url="http://223.84.156.187:807/team_test/headpic.jpg"
                  style="background:url(http://223.84.156.187:807/team_test/headpic.jpg) center center /cover"></view>
                  <view class="activity-item-content" bindtap="to_info">
                    <view class="actions-item-name flex-row">

                      <view>6-12岁在线少儿编程课，在家就能学6-12岁在线少儿编程课，在家就能学</view>
                    </view>
                    <view class="des">
                      <text>进行中  线上活动</text>
                    </view>

                    <view class="activity-item-foot flex-row">
                      <view class="activity-item-num flex-row">
                        <view>￥</view>
                        <view>49</view>
                      </view>
                      <view class="activity-item-btn">
                        <text>3548人已报名</text>
                      </view>
                    </view>
                  </view>
                </view>

              </view>

            </swiper-item>
        </block>
    </swiper>


  </view>
  <!-- 社团动态 -->
  <view class="comment-list-title flex-row">
    <view style="border-right: 10rpx solid #ff9d20;margin-right:30rpx;height:30rpx"></view>
    <view>社团动态</view>
  </view>
  <commentList id="commentList"></commentList>

</view>
