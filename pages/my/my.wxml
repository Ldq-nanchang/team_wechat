          <wux-icon type="md-play" color="#9dabb2ff" size="16"></wux-icon>
        </view>
      </view>
      <view class="center-item flex-row">
        <view class="flex-row" style="align-items: center;">
          <view class="center-item-cion">
            <wux-icon type="md-pricetags" color="#ff9d20"></wux-icon>
