          <wux-icon type="md-play" color="#9dabb2ff" size="16"></wux-icon>
        </view>
      </view>
      <view class="center-item flex-row">
        <view class="flex-row" style="align-items: center;">
          <view class="center-item-cion">
            <wux-icon type="md-clock" color="#ff9d20"></wux-icon>
          </view>
          <view class="center-item-name">浏览记录</view>
        </view>
        <view class="center-item-btn">
          <wux-icon type="md-play" color="#9dabb2ff" size="16"></wux-icon>
        </view>
      </view>
      <view class="center-item flex-row">
        <view class="flex-row" style="align-items: center;">
          <view class="center-item-cion">
            <wux-icon type="md-share-alt" color="#ff9d20"></wux-icon>
          </view>
          <view class="center-item-name">发分享小程序</view>
        </view>
        <view class="center-item-btn">
          <wux-icon type="md-play" color="#9dabb2ff" size="16"></wux-icon>
