/* pages/manage_member/manage_member.wxss */
.top {
  position: fixed;
  top: -2rpx;
  left: 0;
  align-items: center;
  padding: 30rpx 20rpx;
  /* margin-bottom: 50rpx; */
  width: calc(100% - 40rpx);
  /* background: #f9f9f9; */
  background: #fff;
  z-index: 1000;
}
.top-shadow {
  box-shadow: 0 3px 3px rgba(0,0,0,0.1);
}
.search {
  flex-grow: 1;
  align-items: center;
  width: auto;
  height: 74rpx;
  padding-left: 30rpx;
  margin-left: 20rpx;
  background: #F2F3F3;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #BCBFC3;
}
.search-input {
  width: calc(100% - 100rpx);
  margin-left: 30rpx;
}
.search text {
  margin-left: 14rpx;
}
.search-btn {
  height: 100%;
  background-color: transparent;
  line-height: 100rpx;
  font-size: 26rpx;
  border-radius:0;
  color: #ff9d20;
}
.search-btn::after {
  border: none;
}

.tabs {
  height: 80rpx;
  justify-content: space-around;
}
.tab-item {
  line-height: 80rpx;
  font-size: 30rpx;
}
.tab-item-active {
  color: #ff9d20;
  border-bottom: 4rpx solid #ff9d20;
}

.list {
  background: #fff;
}
.item {
  padding: 30rpx;
  border-bottom: 1px solid #eee;
}
.icon {
  align-items: center;
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.content {
  flex-grow: 1;
}
.name {
  font-size: 30rpx;
}
.des {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #808080;
}
.btn {
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}
.btn-ok {
  background: #ff9d20;
  color: #fff;
}
.btn-cancel {
  border: 1px solid #666;
  color: #1a1a1a;
}