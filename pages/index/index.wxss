/**index.wxss**/
.top {
  position: fixed;
  top: -2rpx;
  left: 0;
  align-items: center;
  padding: 30rpx 20rpx;
  /* margin-bottom: 50rpx; */
  width: calc(100% - 40rpx);
  /* background: #f9f9f9; */
  background: #fff;
  z-index: 1000;
}
.top-shadow {
  box-shadow: 0 3px 3px rgba(0,0,0,0.1);
}
.top-address {
  align-items: center;
  font-size: 34rpx;
  position: relative;
}
.picker-wrapper {
  align-items: center;
}
.picker {
  /* padding-right: 20rpx; */
  font-size: 28rpx;    
}
.picker-arrow {
  position: absolute;
  right: 5rpx;
  top: 15rpx;
}
.search {
  flex-grow: 1;
  align-items: center;
  width: auto;
  height: 74rpx;
  padding-left: 30rpx;
  margin-left: 20rpx;
  background: #F2F3F3;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #BCBFC3;
}
.search text {
  margin-left: 14rpx;
}
.top-message {
  height:45rpx;
  padding-left: 20rpx;
}

/* 轮播图 */
.slider-title {
  font-size: 40rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 700;
}
.swiper-wrapper {
  position: relative;
  height: 340rpx;
  /* border-radius: 15rpx; */
  overflow: hidden;
  /* margin-bottom: 50rpx; */
}
.swiper {
  height: 100%;
}
.slide-image {
  width: 100%;
  height: 100%;
}
/* 新闻轮播 */
.news {
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #fff;
}
.news-date {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  background: #ff9d20;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
}
.news-info {
  width: calc(100% - 200rpx);
  height: 80rpx;
  font-size: 24rpx;
  /* overflow: hidden; */
  color: #999;
}
.news-swiper {
  height: 80rpx;
}
.news-info-text {
  height: 64rpx;
  margin: 8rpx 0;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.news-more {
  padding-left: 40rpx;
}
/* 活动 */
.actions {
  background: #fff;
  margin-bottom: 20rpx;
}
.actions-title {
  padding: 20rpx;
  border-bottom: 1px solid #eee;
  font-size: 28rpx;
  color: #dd4841;
  font-weight: 700;
}
.actions-content {
  justify-content: space-between;
  padding: 30rpx 20rpx;
}
.actions-item {
  justify-content: space-between;
  width: calc(50% - 70rpx);
  padding: 20rpx;
  border-radius: 8rpx;
  color: #fff;
  font-size: 24rpx;
}
/* 社团列表 */
.people {
  background: #fff;
  margin-bottom: 20rpx;
}
.people-title {
  position: relative;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
  font-size: 28rpx;
  color: #999;
}
.people-title-icon {
  padding: 5rpx 10rpx;
  border: 1px solid #dd4841;
  border-radius: 4rpx;
  color: #dd4841;
  margin-right: 20rpx; 
  font-weight: 700;
}
.people-title-des {
  position: absolute;
  bottom: 20rpx;
  left: 180rpx;
}
.people-item {
  padding: 20rpx;
} 
.people-item-headpic {
  width: 300rpx;
  height: 180rpx;
  margin-right: 20rpx;
}
.people-item-content {
  position: relative;
  width: calc(100% - 340rpx);
}
.people-item-name {
  margin-bottom: 15rpx;
  font-size: 26rpx;
}
.people-item-address {
  margin-bottom: 15rpx;
  color: #34C3CB;
}
.people-item-foot {
  position: absolute;
  bottom: 0;
  left: 0;
  justify-content: space-between;
  width: 100%;
}
.people-item-num {
  color: #e0a03c;
}
.people-item-btn {
  position: absolute;
  right: 0;
  bottom: 0;
  padding:5rpx;
  border: 1px solid #ed9c4b;
  border-radius: 6px;
  color: #e8b272;
}

.actions-item-name {
  height: 65rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}
.des {
  color: #999;
}
