/**index.wxss**/
.top {
  position: fixed;
  top: -2rpx;
  left: 0;
  align-items: center;
  padding: 30rpx 20rpx;
  /* margin-bottom: 50rpx; */
  width: calc(100% - 40rpx);
  /* background: #f9f9f9; */
  background: #fff;
  z-index: 1000;
}
.top-shadow {
  box-shadow: 0 3px 3px rgba(0,0,0,0.1);
}
.top-address {
  align-items: center;
  font-size: 34rpx;
  position: relative;
}
.picker-wrapper {
  align-items: center;
}
.picker {
  /* padding-right: 20rpx; */
  font-size: 28rpx;    
}
.picker-arrow {
  position: absolute;
  right: 5rpx;
  top: 15rpx;
}
.search {
  flex-grow: 1;
  align-items: center;
  width: auto;
  height: 74rpx;
  padding-left: 30rpx;
  margin-left: 20rpx;
  background: #F2F3F3;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #BCBFC3;
}
.search text {
  margin-left: 14rpx;
}
.top-message {
  flex-shrink: 0;
  height:45rpx;
  min-width:60rpx;
  padding-left: 20rpx;
}

/* 轮播图 */
.slider-title {
  font-size: 40rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 700;
}
.swiper-wrapper {
  position: relative;
  height: 340rpx;
  /* border-radius: 15rpx; */
  overflow: hidden;
  /* margin-bottom: 50rpx; */
}
.swiper {
  height: 100%;
}
.slide-image {
  width: 100%;
  height: 100%;
}


/* 活动 */
.actions {
  background: #fff;
  margin-bottom: 30rpx;
}
.actions-title {
  padding: 30rpx;
  border-bottom: 1px solid #eee;
  font-size: 28rpx;
  color: #dd4841;
  font-weight: 700;
}
.actions-content {
  justify-content: space-between;
  padding: 30rpx;
}
.actions-item {
  justify-content: space-between;
  width: calc(50% - 70rpx);
  padding: 20rpx;
  border-radius: 8rpx;
  color: #fff;
  font-size: 24rpx;
}


.news-title {
  padding: 30rpx;
  background: #fff;
  justify-content: space-between;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
  font-weight: bold;
}


/* 社团列表 */
.people {
  background: #fff;
  margin-bottom: 30rpx;
}
.people-title {
  position: relative;
  padding: 30rpx;
  border-bottom: 1px solid #eee;
  color: #999;
}
.people-title-icon {
  font-size: 30rpx;
  color: #dd4841;
  margin-right: 20rpx; 
  font-weight: 700;
}
.people-title-des {
  position: absolute;
  bottom: 30rpx;
  left: 190rpx;
  font-size: 24rpx!important;
}
.people-item {
  padding: 30rpx;
  border-bottom: 1px solid #eee;
} 
.people-item-headpic {
  width: 300rpx;
  height: 220rpx;
  margin-right: 20rpx;
}
.people-item-content {
  position: relative;
  width: calc(100% - 320rpx);
}
.people-item-name {
  margin-bottom: 15rpx;
  font-size: 30rpx;
}
.people-item-stars {
  margin-bottom: 15rpx;
}
.people-item-address {

  margin-top: 15rpx;
  color: #34C3CB;
  font-size: 26rpx;
}
.people-item-address-text {
  width: calc(100% - 32rpx);
  overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不换行*/
  text-overflow:ellipsis;/*超出部分文字以...显示*/
}
.people-item-foot {
  position: absolute;
  bottom: 0;
  left: 0;
  justify-content: flex-end;
  width: 100%;
}
.people-item-num {
  justify-content: space-between;
  margin: 10rpx 0;
  color: #e0a03c;
}


.actions-item-name {
  /* height: 65rpx; */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}
.des {
  color: #999;
}


.activity {
  background: #fff;
  /* margin-bottom: 20rpx; */
}
.activity-title {
  position: relative;
  padding: 30rpx;
  border-bottom: 1px solid #eee;
  font-size: 28rpx;
  color: #999;
}
.activity-title-icon {
  color: #dd4841;
  margin-right: 20rpx; 
  font-weight: 700;
  font-size: 30rpx;
}
.activity-title-des {
  position: absolute;
  bottom: 30rpx;
  left: 190rpx;
  font-size: 26rpx!important;
}
