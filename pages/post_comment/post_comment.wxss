/* pages/post_comment/post_comment.wxss */
.form {
  padding: 30rpx;
  background: #fff;
  min-height: 100vh;
}
.form-textarea {
  min-height: 300rpx;
  margin-bottom: 20rpx;
}
.img {
  flex-wrap: wrap;
}
.img-item {
  position: relative;
  padding-right: calc(33% - 20rpx);
  padding-top: calc(33% - 20rpx);
  margin-right: 20rpx;
}
.img-add {
  position: relative;
  padding-right: calc(33% - 20rpx);
  padding-top: calc(33% - 20rpx);
}
.img-add-icon {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.select-community {
  margin-top: 40rpx;
  padding: 0 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 70rpx;
  background: #EBF0F2;
  color: #666;
  font-size: 28rpx;
  
}
.img-del {
  position: absolute;
  right: -18rpx;
  top: -18rpx;
  width: 45rpx;
  height: 45rpx;
}
.img-del-icon {
  width: 100%;
  height: 100%;
}
.post-comment-btn {
  position: fixed;
  bottom: 30rpx;
  left: 30rpx;
  width: calc(100% - 60rpx);
  border-radius: 6rpx;
  background: #ff9d20;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}