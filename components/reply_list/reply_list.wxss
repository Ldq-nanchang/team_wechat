/* components/reply_list/reply_list.wxss */
@import "../../assets/wxss/iconfont.wxss";
.flex-row {
  display: flex;
}
.list {
  position: relative;
  margin: 30rpx 0;
}
.item-title {
  position: absolute;
  top: 0;
  left: 0;
  width: calc(100% - 60rpx);
  justify-content: space-between;
  padding: 30rpx;
  background: #fff;
  border-bottom: 1px solid #E6E6E6;
}
.fixed {
  position: fixed;
}
/* 评论列表 */
.item {
  padding: 30rpx;
  background: #fff;
  font-size: 28rpx;
  color: #1a1a1a;
}
.item-content {
  flex-grow: 1;
}
.item-icon {
  flex-shrink: 0;
  margin-right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
}
.item-name {
  justify-content: space-between;
}
.item-date {
  font-size: 24rpx;
  color: #999999;
}
.item-text {
  margin: 20rpx 0;
}
/* 回复列表 */
.reply-list {
  margin: 20rpx 0;
  padding: 20rpx;
  background: #EBF0F2;
}
.reply-item {
  margin-bottom: 20rpx;
}
.reply-icon {
  flex-shrink: 0;
  margin-right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
}
.reply-item-content {
  flex-grow: 1;
}
.reply-name {
  justify-content: space-between;
  color: #ff9d20;
}
.reply-date {
  font-size: 24rpx;
  color: #999;
}
.reply-text {
  margin: 20rpx 0;
  font-size: 26rpx;
}
.item .item-line {
  border-bottom: 1px solid #E6E6E6;
}
.item:last-child .item-line {
  border-bottom: 1px solid #fff!important;
}
.window {
  position: fixed;
  left: 0;
  bottom: 0;
  padding: 30rpx;
  width: calc(100% -  60rpx);
  background: #fff;
  z-index: 2000;
}
.post-btn {
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 150px;
}
.cover-bg {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.3)
}
.submit::after {
  border: none;
}
.submit {
  background-color: #fff;
  border-radius:0;
}
.loading-wrapper {
  padding: 20rpx;
  text-align: center;
  font-size: 26rpx;
  color: #777;
}