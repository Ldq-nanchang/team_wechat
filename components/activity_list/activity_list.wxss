.activity-item {
  padding: 30rpx;
  border-bottom: 1px solid #eee;
} 
.activity-item-headpic {
  width: 300rpx;
  height: 220rpx;
  margin-right: 20rpx;
}
.activity-item-content {
  position: relative;
  width: calc(100% - 320rpx);
}
.activity-item-name {
  margin-bottom: 15rpx;
  font-size: 26rpx;
}
.activity-item-address {
  margin-bottom: 15rpx;
  color: #34C3CB;
}
.activity-item-foot {
  position: absolute;
  bottom: 0;
  left: 0;
  justify-content: space-between;
  width: 100%;
}
.activity-item-num {
  color: #faad14;
}
.activity-item-btn {
  position: absolute;
  right: 0;
  bottom: 0;
}

.actions-item-name {
  height: 75rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
  font-size: 30rpx;
}
.des {
  color: #999;
}
.loading-wrapper {
  padding: 20rpx;
  text-align: center;
  font-size: 26rpx;
  color: #777;
}