/* components/people_list/people_list.wxss */
@import "/assets/wxss/iconfont.wxss";
.flex-row {
  display: flex;
}
.flex-col {
  display: flex;
  flex-flow: column;
}
/* 社团列表 */
.people {
  background: #fff;
  margin-bottom: 30rpx;
}
.people-title {
  position: relative;
  padding: 30rpx;
  border-bottom: 1px solid #eee;
  font-size: 28rpx;
  color: #999;
}
.people-title-icon {
  padding: 5rpx 10rpx;
  border: 1px solid #dd4841;
  border-radius: 4rpx;
  color: #dd4841;
  margin-right: 20rpx; 
  font-weight: 700;
}
.people-title-des {
  position: absolute;
  bottom: 30rpx;
  left: 190rpx;
}
.people-item {
  padding: 30rpx;
  /* border-bottom: 1px solid #eee; */
  background: #fff;
  margin-bottom: 30rpx;
} 
.people-item-headpic {
  width: 300rpx;
  height: 220rpx;
  margin-right: 20rpx;
}
.people-item-content {
  position: relative;
  width: calc(100% - 320rpx);
}
.people-item-name {
  margin-bottom: 15rpx;
  font-size: 30rpx;
}
.people-item-address {
  margin-bottom: 15rpx;
  color: #34C3CB;
}
.people-item-foot {
  position: absolute;
  bottom: 0;
  left: 0;
  justify-content: space-between;
  width: 100%;
}
.people-item-num {
  color: #e0a03c;
}
.people-item-btn {
  position: absolute;
  right: 0;
  bottom: 0;
  padding:5rpx;
  border: 1px solid #ed9c4b;
  border-radius: 6px;
  color: #e8b272;
}

.actions-item-name {
  height: 65rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}
.des {
  color: #999;
}
.loading-wrapper {
  padding: 20rpx;
  text-align: center;
  font-size: 26rpx;
  color: #777;
}