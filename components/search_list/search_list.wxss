/* components/search_list/search_list.wxss */
.flex-row {
  display: flex;
}
.list {
  padding: 0 30rpx;
  background: #fff;
}
.item {
  padding: 30rpx 0;
  border-bottom: 1px solid #E6E6E6;
}
.pic {
  flex-shrink: 0;
  width: 210rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}
.content {
  flex-grow: 1;
}
.name {
  margin-bottom: 20rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
}
.des {
  color: #999;
}
.loading-wrapper {
  padding: 20rpx;
  text-align: center;
  font-size: 26rpx;
  color: #777;
}