/* 获取手机号 */
.get-mobile-wrapper {
  position: fixed;
  left: 0;
  top: 0;
  justify-content: flex-end;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.7);
  z-index: 2000;
}
.get-mobile {
  height: 33%;
  background: #fff;
}
.get-mobile-title {
  justify-content: space-between;
  padding: 30rpx;
  font-size: 30rpx;
  color: #1a1a1a;
}
.get-mobile-body {
  padding: 30rpx;
}
.get-mobile-form {
  padding-left: 30rpx; 
  align-items: center;
  height: 80rpx;
  border: 1px solid #ff9d20;
  border-radius: 8rpx;
}
.get-mobile-input {
  flex-grow: 1;
}
.get-mobile-btn::after {
  border: none;
}
.get-mobile-btn {
  margin: 0;
  background-color: transparent;
  font-size: 26rpx;
  border-radius:0;
  color: #ff9d20;
}
.get-mobile-foot {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background: #ff9d20;
  color: #fff;
  font-size: 30rpx;
}

